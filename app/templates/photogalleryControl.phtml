<div id="photogallery">
{if !empty($photos)}
{foreach $photos as $photo}
  <div>
    <a href="{$photo->getContent()}">
      <img src="{$photo->getThumbnail()}" alt="{$photo->getSummary()}" />
    </a>
    {if $photo->getSummary() != ''}
    <span>{$photo->getSummary()}</span>
    {/if}
  </div>
{/foreach}
{else}
<p>Nebyly přidány žádné fotografie</p>
{/if}
</div>